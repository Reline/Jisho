<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_concept" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin" app:cardElevation="2dp" app:cardCornerRadius="2dp">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent" android:padding="4dp">

        <TextView android:id="@+id/cardFuriganaTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textIsSelectable="true" tools:text="furigana" />

        <com.github.reline.jisho.widgets.AutoResizeTextView android:id="@+id/cardReadingTextView"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="40sp"
            android:maxLines="1" android:textIsSelectable="true" tools:text="Kanji" />

        <TextView android:id="@+id/cardCommonTextView" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:background="@drawable/background_common"
            android:paddingTop="2dp" android:paddingBottom="2dp" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:layout_margin="2dp" android:textColor="@android:color/white" android:text="@string/common_word" />

        <LinearLayout android:id="@+id/cardTagsLayout" android:orientation="vertical" android:layout_margin="2dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <LinearLayout android:id="@+id/cardSensesLayout" android:orientation="vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>