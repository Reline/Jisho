CREATE TABLE IF NOT EXISTS NameType(
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    -- abbreviated value
    abr TEXT NOT NULL UNIQUE ON CONFLICT IGNORE,
    value TEXT NOT NULL
);

insertNameType:
INSERT INTO NameType (abr, value)
VALUES (?, ?);

rowid:
SELECT
CASE
WHEN (SELECT 1 FROM NameType WHERE abr = :abbreviation) == 1 THEN
    (SELECT id FROM NameType WHERE abr = :abbreviation)
ELSE
    (SELECT last_insert_rowid())
END;